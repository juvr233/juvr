# 服务器配置
NODE_ENV=development
PORT=5000

# 数据库配置
MONGO_URI=mongodb://localhost:27017/zenith_destiny
MONGO_USERNAME=
MONGO_PASSWORD=

# JWT认证
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=7d

# 管理员账户
ADMIN_EMAIL=admin@zenith-destiny.com
ADMIN_PASSWORD=Admin@123456

# 备份配置
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# Stripe支付配置
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Shopify API配置
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_STOREFRONT_TOKEN=your_storefront_access_token
SHOPIFY_ADMIN_TOKEN=your_admin_access_token
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_API_VERSION=2025-07

# AI服务配置
AI_MODEL_PATH=./data/models
TAROT_DATA_PATH=./data/tarot

# Google OAuth配置
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Redis缓存配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX_REQUESTS=100  # 每个窗口期最大请求数

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# 日志配置
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_MAX_FILES=5

# 安全配置
ADMIN_API_KEY=your_admin_api_key

# 客户端URL配置
CLIENT_URL=http://localhost:3000
